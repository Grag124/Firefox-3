language="python"
audio=true
run="python main.py"
modules = ["python-3.11"]

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6080
externalPort = 80

[[ports]]
localPort = 45013
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Start noVNC GUI"
author = 18374188
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x Firefox2/start-gui.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./Firefox2/start-gui.sh"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Firefox Desktop"

[[workflows.workflow]]
name = "Firefox Desktop"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Firefox2 && ./start-gui.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

